<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:background="@drawable/offer_list_bg"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_weight="0.7">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/center_image"
                android:layout_width="85dp"
                android:layout_height="90dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                app:border_width="0.5dp"
                app:border_color="#404040"
                android:src="@drawable/listview_logo_placeholder"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_left_10"
            android:layout_weight="0.35"
            android:orientation="vertical">

            <TextView
                android:id="@+id/center_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/fav_center"
                android:text="TextView"
                android:textColor="@color/purple"
                android:textStyle="bold"
                android:textSize="15sp"
                android:ellipsize="end"
                android:singleLine="true"
                android:maxLength="20"/>

            <TextView
                android:id="@+id/center_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/center_name"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/margin_left_5"
                android:layout_marginLeft="@dimen/margin_left_5"
                android:text="TextView"
                android:textStyle="italic"
                android:textColor="@color/black3"
                android:textSize="13sp"
                android:maxLines="3"/>

            <ImageButton
                android:id="@+id/fav_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@+id/floor_no"
                android:contentDescription="@string/app_name"
                android:src="@drawable/offer_fav_r"
                android:background="@color/transparent" />

            <TextView
                android:id="@+id/center_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/center_add"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="@dimen/margin_left_5"
                android:layout_marginBottom="@dimen/margin_left_10"
                android:textColor="@color/purple"
                android:textSize="13sp"
                android:text="TextView"
                android:ellipsize="end"
                android:singleLine="true" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>