<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/message_view_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/headerId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/purple"
        android:orientation="horizontal"
        android:weightSum="2"
        android:paddingBottom="@dimen/margin_left_10"
        android:paddingTop="@dimen/margin_left_10" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="@dimen/margin_left_20"
            android:text="@string/recent_chats"/>

        <ImageButton
            android:id="@+id/chat_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0.4"
            android:layout_marginRight="@dimen/margin_left_5"
            android:background="@drawable/chat_icon_d"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/margin_left_10"
            android:visibility="visible"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/headerId"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >
        </ListView>

        <TextView
            android:id="@+id/noRecordtextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/no_chats"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="gone" />





    </RelativeLayout>

</RelativeLayout>