<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp" >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_blocked"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_contact_picture_holo_light"
            android:layout_marginBottom="@dimen/margin_left_5"
            />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Sharjeel Haider"
            android:singleLine="true"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_left_10"
            android:textSize="15dp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/img_blocked" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="offline"
            android:id="@+id/status_txt"
            android:layout_below="@+id/txt_name"
            android:layout_alignStart="@+id/txt_name" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox"
            android:theme="@style/CheckBoxTheme"
            android:layout_marginRight="@dimen/margin_left_10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>

</LinearLayout>