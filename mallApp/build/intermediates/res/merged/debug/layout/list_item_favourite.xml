<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:baselineAligned="false"
        android:weightSum="1" >
    
    	<LinearLayout
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="0.5"
        	android:background="@color/border_grey">
            <!-- Thumbnail Image -->
            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/center_image"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_launcher"
                android:contentDescription="@string/app_name"/>

        </LinearLayout>
        <RelativeLayout 
            android:layout_width="match_parent"
        	android:layout_height="match_parent"
        	android:layout_weight="0.5"
        	android:orientation="vertical"
        	android:paddingLeft="10dp">

            <TextView
                android:id="@+id/center_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:layout_toLeftOf="@+id/fav_center"
                android:textColor="@color/text_interest"
                
                android:textStyle="bold"
                android:textSize="15sp" />

        	<TextView
        	    android:id="@+id/center_city"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_alignLeft="@+id/center_name"
        	    android:layout_below="@+id/center_name"
        	    android:layout_marginRight="5dp"
        	    android:layout_toLeftOf="@+id/fav_center"
        	    android:textColor="@color/text_interest"
        	    
        	    android:textSize="12sp" />

        	<ImageView
        	    android:id="@+id/fav_center"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:layout_alignParentRight="true"
        	    android:layout_centerVertical="true"
        	    android:layout_marginRight="15dp"
        	    android:src="@drawable/interest"
        	    android:contentDescription="@string/app_name" />
		</RelativeLayout>
    </LinearLayout>
    <View 
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/purple"/>
</LinearLayout><!-- From: file:/J:/Android/Raw/MallApp/mallApp/src/main/res/layout/list_item_favourite.xml -->