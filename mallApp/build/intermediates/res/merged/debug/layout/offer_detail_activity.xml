<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/activity_detail_header"/>

    <LinearLayout
        android:id="@+id/shop_image_slider"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <include layout="@layout/shop_detail_image_slider" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gotoshop_background">

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_20" />

        <Button
            android:id="@+id/go_to_shop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="15dp"
            android:background="@color/transparent"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/go_to_shop_indicator"
            android:text="@string/go_to_shop"
            android:textColor="@color/white"
            android:textSize="@dimen/text_18"
            android:textStyle="italic"
            android:visibility="gone" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <TextView
            android:id="@+id/offer_detail"
            android:layout_width="wrap_content"
