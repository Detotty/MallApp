<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/barcode_bg"
    android:layout_margin="@dimen/margin_left_30"
    android:orientation="vertical" >
    
    <RelativeLayout
	    android:id="@+id/relativeLayout1"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="1dp"
	    android:layout_marginLeft="1dp"
	    android:layout_marginRight="1dp"
	    android:background="@android:color/white">
        <ImageView
            android:id="@+id/service_image"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:background="@drawable/mallapp_placeholder"
            android:contentDescription="@string/app_name" />
        
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white"
            android:layout_alignBottom="@+id/service_image"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/margin_left_15"
            android:gravity="center_vertical" >
            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_15"
                android:textStyle="bold"
                android:text="A Service " />
            <TextView
                android:id="@+id/floor_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title"
                android:layout_alignParentLeft="true"
                android:textColor="@color/purple"
                android:textSize="@dimen/text_12"
                android:text="Floor 1" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/app_name"
                android:layout_marginRight="@dimen/margin_left_15"
                android:visibility="gone"
                android:src="@drawable/shop_detail_location_p" />
            
        </RelativeLayout>
	</RelativeLayout>
	
    
    
    <RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingLeft="@dimen/margin_left_15"
		android:paddingRight="@dimen/margin_left_15"
		android:paddingTop="@dimen/margin_left_15"
		android:paddingBottom="@dimen/margin_left_15"
		android:gravity="center_vertical">
        <TextView
            android:id="@+id/phone_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textColor="@color/black3"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_15"
            android:drawableLeft="@drawable/phone"
            android:drawablePadding="@dimen/margin_left_5"
            android:text="@string/accept" />
        <ImageView
            android:id="@+id/indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_left_10"
            android:contentDescription="@string/app_name"
            android:src="@drawable/shop_expand_close" />
        </RelativeLayout>

    <TextView
        android:id="@+id/detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black3"
        android:textSize="@dimen/text_12"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginRight="@dimen/margin_left_10"
        android:text="@string/accept" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginTop="@dimen/margin_left_10"
        android:textColor="@color/black3"
        android:textSize="@dimen/text_18"
        android:textStyle="bold"
        android:text="@string/address" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_marginTop="@dimen/margin_left_5"
        android:textColor="@color/black3"
        android:textSize="@dimen/text_12"
        android:text="@string/address" />

</LinearLayout><!-- From: file:/J:/Android/Raw/MallApp/mallApp/src/main/res/layout/list_item_services_detail.xml -->