<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:id="@+id/list_item_r"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/latest_list_bg_blue">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/thumbnail"
        android:src="@drawable/eugene"
        android:layout_margin="@dimen/margin_left_10"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ali Hussnian"
        android:id="@+id/name"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/margin_left_5"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toEndOf="@+id/thumbnail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="online"
        android:textColor="@color/purple"
        android:id="@+id/status"
        android:layout_below="@+id/name"
        android:layout_alignStart="@+id/name" />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Hi ali"
        android:id="@+id/number"
        android:singleLine="true"
        android:layout_below="@+id/status"
        android:layout_toEndOf="@+id/thumbnail" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:id="@+id/time"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/thumbnail"
        android:layout_alignStart="@+id/number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(1)"
        android:id="@+id/count"
        android:textSize="@dimen/margin_left_20"

        android:textColor="@color/purple"
        android:layout_alignTop="@+id/status"
        android:layout_toEndOf="@+id/number" />

</RelativeLayout>
</LinearLayout><!-- From: file:/J:/Android/Raw/MallApp/mallApp/src/main/res/layout/my_conv_list_cell.xml -->