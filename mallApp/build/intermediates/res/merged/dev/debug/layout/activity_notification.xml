<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mallapp.View.NotificationActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/shop_main_menu_header" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Notification Setting"
        android:id="@+id/textView14"
        android:background="@color/grey_cells"
        android:textColor="@color/grey"
        android:textSize="@dimen/margin_left_20"
        android:paddingTop="@dimen/margin_left_20"
        android:paddingBottom="@dimen/margin_left_10"
        android:paddingLeft="@dimen/margin_left_15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/header"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/notification"
        android:id="@+id/textView15"
        android:layout_marginTop="@dimen/margin_left_15"
        android:textColor="@color/purple"
        android:textSize="17dp"
        android:layout_marginLeft="@dimen/margin_left_15"
        android:layout_below="@+id/textView14"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switch_notification"
        android:layout_marginRight="@dimen/margin_left_15"
        android:layout_alignTop="@+id/textView15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/imageView6"
        android:background="@color/grey"
        android:layout_marginTop="@dimen/margin_left_5"
        android:layout_below="@+id/switch_notification"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
